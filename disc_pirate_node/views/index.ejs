<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <nav class="navbar navbar-expand-lg">

        <a class="navbar-brand" style="float: none" href="/">
            <img src="/images/disc_pirate_logo_trans.png" width="60" title="Disc Pirate"/>
        </a>

        <ul class="navbar-nav ml-auto">

            <!-- Nav item to hold basket -->
            <li id="nav-basket-link" class="nav-item dropdown d-none">
                <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Basket
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                    <div id="basket-container" class="container-fluid">
                        <!-- Normally hidden, shown when basket empty -->
                        <div id="empty-basket" class="d-none">
                            <h2 class="dropdown-header">Your basket is empty</h2>
                        </div>

                        <!-- table for basket items, populated in albums.js -->
                        <div class="row justify-content-center">
                            <table id="basket-table" class="dropdown-item table"></table>
                        </div>

                        <!-- Checkout form, event listener in forms.js -->
                        <div id="checkout-form-container" class="row justify-content-center">
                            <form id="checkout-form" method="POST", action="."></form>
                                <div class="col-4 d-flex justify-content-center">
                                    <button  id="checkout-button" class="btn btn-primary">Checkout</button>
                                </div>
                                <div class="col-8">
                                    <input class="form-control" type="text" name="address" placeholder="Address" id="checkout-form-address">
                                    <input class="form-control" type="text" name="contactNumber" placeholder="Contact Number" id="checkout-form-contact">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </li>

            <!-- Nav item to hold orders -->
            <li id="nav-orders-link" class="nav-item dropdown d-none">
                <a class="nav-link dropdown-toggle" href="#" id="nav-orders-link-text" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Orders
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                    <div id="orders-container" class="container-fluid">

                        <!-- Normally hidden, shown when basket empty -->
                        <div id="no-orders" class="d-none">
                            <h2 class="dropdown-header">No orders at the moment</h2>
                        </div>

                        <!-- table for order items, populated in orders.js -->
                        <div class="row justify-content-center">
                            <table id="orders-table" class="dropdown-item table"></table>
                        </div>
                    </div>
                </div>
            </li>
        </ul>

        <!-- login form, disappears when completed, event listener in forms.js-->
        <form id="login-form" class="form-inline">
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <input id="login-form-username" class="form-control mr-sm-2" type="text" placeholder="Username" aria-label="Username">
                        </div>
                        <div class="row">
                            <input id="form-password" class="form-control mr-sm-2" type="password" placeholder="Password" aria-label="Password">
                        </div>
                    </div>
                    <input class="form-control mr-sm-2" type="submit" value="Login">
                </div>
            </div>
        </form>
        <form id="signup-form" class="form-inline">
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <input id="signup-form-username" class="form-control mr-sm-2" type="text" placeholder="Username" aria-label="Username">
                        </div>
                        <div class="row">
                            <input id="form-password-1" class="form-control mr-sm-2" type="password" placeholder="Password" aria-label="Password">
                        </div>
                        <div class="row">
                            <input id="form-password-2" class="form-control mr-sm-2" type="password" placeholder="Confirm Password" aria-label="Confirm Password">
                        </div>
                    </div>
                    <input class="form-control mr-sm-2" type="submit" value="Signup">
                </div>
            </div>
        </form>
    </nav>

    <div class="container-fluid">
        <!-- div for all album cards, populated by albums.js -->
        <div id="all-albums" class="row card-group"></div>
    </div>

    <script type="text/javascript" src="/javascripts/forms.js"></script>
    <script type="text/javascript" src="/javascripts/albums.js"></script>
    <script type="text/javascript" src="/javascripts/orders.js"></script>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>

